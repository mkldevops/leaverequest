{% extends 'base.html.twig' %}

{% block title %}New Leave Request{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Submit a Leave Request</h1>
        
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-4">
                {# Start Date #}
                <div>
                    {{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.startDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    {{ form_errors(form.startDate, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                {# End Date #}
                <div>
                    {{ form_label(form.endDate, 'End Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.endDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    {{ form_errors(form.endDate, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                {# Reason #}
                <div>
                    {{ form_label(form.reason, 'Reason', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.reason, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 min-h-[100px]'}}) }}
                    {{ form_errors(form.reason, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
            </div>

            <div class="mt-6">
                {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
